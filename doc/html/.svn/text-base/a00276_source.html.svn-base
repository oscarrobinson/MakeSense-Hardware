<a name="l00530"></a>00530             PRINTF(<span class="stringliteral">&quot;wait -&gt; pending\n&quot;</span>);
<a name="l00531"></a>00531             set_broadcast_flag(p, BROADCAST_FLAG_PENDING);
<a name="l00532"></a>00532           }
<a name="l00533"></a>00533         }
<a name="l00534"></a>00534       }
<a name="l00535"></a>00535 <span class="preprocessor">#endif </span><span class="comment">/* WITH_PENDING_BROADCAST */</span>
<a name="l00536"></a>00536     
