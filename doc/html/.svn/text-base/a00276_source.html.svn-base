<a name="l00586"></a>00586 
<a name="l00587"></a>00587 <span class="preprocessor">#if WITH_ADAPTIVE_OFF_TIME</span>
<a name="l00588"></a>00588 <span class="preprocessor"></span>        off_time += LOWEST_OFF_TIME;
