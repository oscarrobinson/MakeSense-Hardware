<a name="l00558"></a>00558           PRINTF(<span class="stringliteral">&quot;pending -&gt; send\n&quot;</span>);
<a name="l00559"></a>00559           set_broadcast_flag(p, BROADCAST_FLAG_SEND);
<a name="l00560"></a>00560           turn_radio_on();
<a name="l00561"></a>00561         }
<a name="l00562"></a>00562       }
<a name="l00563"></a>00563     }
<a name="l00564"></a>00564 <span class="preprocessor">#endif </span><span class="comment">/* WITH_PENDING_BROADCAST */</span>
<a name="l00565"></a>00565 
<a name="l00566"></a>00566     <span class="comment">/* If we have no packets to send (indicated by the list length of</span>
