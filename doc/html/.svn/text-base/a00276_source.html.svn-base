<a name="l00248"></a>00248 turn_radio_on_callback(<span class="keywordtype">void</span> *packet)
<a name="l00249"></a>00249 {
<a name="l00250"></a>00250   <span class="keyword">struct </span>queue_list_item *p = packet;
<a name="l00251"></a>00251 
<a name="l00252"></a>00252   <a class="code" href="a01878.html#ga3eb717d9997a980e937e2ea8b0c07677" title="Remove a specific element from a list.">list_remove</a>(pending_packets_list, p);
<a name="l00253"></a>00253   <a class="code" href="a01878.html#ga775c0dfc08dca991297df7b419b7be43" title="Add an item at the end of a list.">list_add</a>(queued_packets_list, p);
<a name="l00254"></a>00254   turn_radio_on();
<a name="l00255"></a>00255 
<a name="l00256"></a>00256   <span class="comment">/*  printf(&quot;enc\n&quot;);*/</span>
<a name="l00257"></a>00257 }
