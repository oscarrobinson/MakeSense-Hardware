<a name="l00569"></a>00569     <span class="keywordflow">if</span>(num_packets_to_send() == 0) {
<a name="l00570"></a>00570       
<a name="l00571"></a>00571       <span class="comment">/* If we are not listening for announcements, we turn the radio</span>
<a name="l00572"></a>00572 <span class="comment">         off and wait until we send the next probe. */</span>
<a name="l00573"></a>00573       <span class="keywordflow">if</span>(is_listening == 0) {
<a name="l00574"></a>00574         <span class="keywordtype">int</span> current_off_time;
<a name="l00575"></a>00575         <span class="keywordflow">if</span>(!NETSTACK_RADIO.<a class="code" href="a00073.html#a4b380ec8f632e6e435ca210b8072a438" title="Check if the radio driver is currently receiving a packet.">receiving_packet</a>()) {
