<a name="l00287"></a>00287       len = 2 + buffer[i + 1];
<a name="l00288"></a>00288     }
<a name="l00289"></a>00289 
<a name="l00290"></a>00290     <span class="keywordflow">if</span>(len + i &gt; buffer_length) {
