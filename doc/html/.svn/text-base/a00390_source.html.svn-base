<a name="l00246"></a>00246     PRINTF(<span class="stringliteral">&quot;RPL: Neighbor already in neighbor cache\n&quot;</span>);
<a name="l00247"></a>00247   }
<a name="l00248"></a>00248 
<a name="l00249"></a>00249   buffer_length = <a class="code" href="a01926.html#ga72af00d45662ba0dc2ba3781a556e25b" title="The length of the packet in the uip_buf buffer.">uip_len</a> - uip_l3_icmp_hdr_len;
<a name="l00250"></a>00250 
<a name="l00251"></a>00251   <span class="comment">/* Process the DIO base option. */</span>
