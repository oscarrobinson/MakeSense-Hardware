<a name="l00388"></a>00388       PRINTF(<span class="stringliteral">&quot;RPL: Copying prefix information\n&quot;</span>);
<a name="l00389"></a>00389       memcpy(&amp;dio.prefix_info.prefix, &amp;buffer[i + 16], 16);
<a name="l00390"></a>00390       <span class="keywordflow">break</span>;
<a name="l00391"></a>00391     <span class="keywordflow">default</span>:
<a name="l00392"></a>00392       PRINTF(<span class="stringliteral">&quot;RPL: Unsupported suboption type in DIO: %u\n&quot;</span>,
<a name="l00393"></a>00393         (<span class="keywordtype">unsigned</span>)subopt_type);
<a name="l00394"></a>00394     }
<a name="l00395"></a>00395   }
