<a name="l00440"></a>00440 
<a name="l00441"></a>00441   buffer[pos] |= instance-&gt;mop &lt;&lt; RPL_DIO_MOP_SHIFT;
<a name="l00442"></a>00442   buffer[pos] |= dag-&gt;preference &amp; RPL_DIO_PREFERENCE_MASK;
<a name="l00443"></a>00443   pos++;
<a name="l00444"></a>00444 
<a name="l00445"></a>00445   buffer[pos++] = instance-&gt;dtsn_out;
