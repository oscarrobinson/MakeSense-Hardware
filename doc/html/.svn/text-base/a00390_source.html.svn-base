<a name="l00294"></a>00294     }
<a name="l00295"></a>00295 
<a name="l00296"></a>00296     PRINTF(<span class="stringliteral">&quot;RPL: DIO option %u, length: %u\n&quot;</span>, subopt_type, len - 2);
<a name="l00297"></a>00297 
<a name="l00298"></a>00298     <span class="keywordflow">switch</span>(subopt_type) {
<a name="l00299"></a>00299     <span class="keywordflow">case</span> RPL_OPTION_DAG_METRIC_CONTAINER:
<a name="l00300"></a>00300       <span class="keywordflow">if</span>(len &lt; 6) {
