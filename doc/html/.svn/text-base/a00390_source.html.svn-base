<a name="l00381"></a>00381       }
<a name="l00382"></a>00382       dio.prefix_info.length = buffer[i + 2];
<a name="l00383"></a>00383       dio.prefix_info.flags = buffer[i + 3];
<a name="l00384"></a>00384       <span class="comment">/* valid lifetime is ingnored for now - at i + 4 */</span>
<a name="l00385"></a>00385       <span class="comment">/* preferred lifetime stored in lifetime */</span>
<a name="l00386"></a>00386       dio.prefix_info.lifetime = get32(buffer, i + 8);
