<a name="l00232"></a>00232 
<a name="l00233"></a>00233   <span class="keywordflow">if</span>((nbr = uip_ds6_nbr_lookup(&amp;from)) == <a class="code" href="a01956.html#ga070d2ce7b6bb7e5c05602aa8c308d0c4" title="The null pointer.">NULL</a>) {
