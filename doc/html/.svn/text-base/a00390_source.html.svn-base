<a name="l00353"></a>00353       <span class="keywordflow">break</span>;
<a name="l00354"></a>00354     <span class="keywordflow">case</span> RPL_OPTION_DAG_CONF:
<a name="l00355"></a>00355       <span class="keywordflow">if</span>(len != 16) {
